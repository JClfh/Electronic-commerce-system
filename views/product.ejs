<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>product</title>
        <link rel="stylesheet" href="/bootstrap-4.3.1-dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/public/header.css">
        <link rel="stylesheet" href="/css/public/prolist.css">
        <link rel="stylesheet" href="/css/product.css">
        <script src="/js/jquery-3.3.1.min.js"></script>
        <script src="/bootstrap-4.3.1-dist/js/bootstrap.min.js"></script>
    </head>
    <body>
        <%- include('header.ejs')  -%>
        <div class="main-content">
            <%- include('prolist.ejs')  -%>
            <div class="product-page">
              
                <div class="card mb-3" >
                    <div class="card-header">商品管理</div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item" style="display:flex;justify-content:space-between;align-items:center;">
                            <form class="form-inline" action="/product/search" method="GET">
                                    名称
                                <input type="text" class="form-control mx-2" name="name" placeholder="input ProductName">
                                <input type="submit" class="form-control" value="开始搜索">
                            </form>
                            <div>
                                <a href="/product/previous" class="btn btn-success mr-2">上一页</a>
                                <a href="/product/next" class="btn btn-danger">下一页</a>
                            </div>
                        </li>
                    </ul>
                </div>
                <table class="table table-light table-striped">
                    <thead>
                        <tr>
                        <th class="text-center" scope="col">编号</th>
                        <th class="text-center" scope="col">商品类别</th>
                        <th class="text-center" scope="col">商品名称</th>
                        <th class="text-center" scope="col">商品图片</th>
                        <th class="text-center" scope="col">商品价格</th>
                        <th class="text-center" scope="col">库存</th>
                        <th class="text-center" scope="col">销售量</th>
                        <th class="text-center" scope="col">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0 ; i < products.length;i++){%>   
                            <tr class="protop">
                                <td class="text-center proitem"><%=products[i]._id%></td>
                                <td class="text-center proitem"><%=products[i].category.name%></td>
                                <td class="text-center proitem"><%=products[i].proName%></td>
                                <td class="text-center proitem"><img src="<%=products[i].proImg%>" alt="<%=products[i].proName%>"  width="100"  id="proImg"></td>
                                <td class="text-center proitem"><%=products[i].procost%></td>
                                <td class="text-center proitem">
                                    <%=products[i].inventory%>
                                </td>
                                <td class="text-center proitem">
                                    <%=products[i].views%>
                                </td>
                                <td class="text-center proitem">
                                <a  href="/product/productedit?id=<%=products[i]._id.toString()%>" class="btn btn-success">修改</a>
                                <a href="/product/productdelete?id=<%=products[i]._id.toString()%>" class="btn btn-danger">删除</a>
                                <a href="#" class="btn btn-primary">上架</a>
                            </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </body>

</html>